<Page x:Class="_321_Goncharov.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_321_Goncharov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Name="lblLogin"
               Grid.Row="1"
               Grid.Column="1"
               Content="Логин"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0"
               />

        <Label Name="lblPassword"
               Grid.Row="1"
               Grid.Column="1"
               Content="Пароль"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,80,0,0"
               />

        <TextBox Name="tbLogin"
                 Grid.Row="1"
                 Grid.Column="2"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="0"
                 TextChanged="tbLogin_TextChanged"
                 ToolTip="Введите логин или почту"
                 />

        <PasswordBox Grid.Row="1"
                     Grid.Column="2"
                     Name="pbPassword"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="0,80,0,0"
                     PasswordChanged="pbPassword_PasswordChanged"
                     ToolTip="Введите пароль"
                     />

        <Button Grid.Row="2"
                Grid.Column="2"
                Name="btnLogin"
                Content="Вход"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0"
                Width="150" Click="btnLogin_Click"
                ToolTip="Вход"
                />

        <Button Grid.Row="2"
                Grid.Column="2"
                Name="btnRegister"
                Content="Регистрация"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,50,0,0"
                Width="150"
                ToolTip="Регистрация"
                />

        <TextBlock Text="Логин или почта"
                   Foreground="Gray"
                   Name="txtHintLogin"
                   Margin="0,10,0,0"
                   VerticalAlignment="Top"
                   Width="150"
                   Grid.Column="2"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   />

        <TextBlock Text="Пароль"
                   Foreground="Gray"
                   Name="txtHintPassword"
                   Margin="0,90,0,0"
                   VerticalAlignment="Top"
                   Width="150"
                   Grid.Column="2"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   />

    </Grid>
</Page>
